{
  "manifest_version": 2,
  "name": "Wplace Favorites List",
  "version": "1.1",
  "description": "Save a list of your favorite places in Wplace.",
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "storage",
    "scripting",
    "downloads"
  ],
  "content_scripts": [
    {
      "matches": ["https://wplace.live/*"],
      "js": ["main.js"],
      "css": ["main.css"]
    }
  ],
  "background": {
    "scripts": ["backup.js"],
    "persistent": false,
    "type": "module"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "@wplace-favs.orofil",
      "strict_min_version": "50.0"
    }
  }
}